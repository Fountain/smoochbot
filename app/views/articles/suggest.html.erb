<h1>all suggestions are welcome.<br> please input your data below:</h1>
<br />
<%= form_for(@article) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 96 %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 70, :rows => 6 %>
  </p>
  <p>
    <%= f.label :min_cost, "minimum cost" %>
    $ <%= f.text_field :min_cost, :size => 10 %>  
    <%= f.label :max_cost, "maximum cost" %>
    $ <%= f.text_field :max_cost, :size => 10 %></p>
    <p><%= f.label :duration, "how many minutes will this idea take to prepare?" %>
    <%= f.text_field :duration, :size => 10 %>
  </p>
  <p>
    <%= f.submit "suggest", :class => 'myButton' %>
  </p>
<% end %>