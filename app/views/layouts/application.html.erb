<!DOCTYPE html>
<html>
<head>
  <title>Smoochbot</title>
  <%= stylesheet_link_tag("smoochbot") %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="content">
	<div id="user_nav">
	<% if user_signed_in? %>
		<p>Hello <%= current_user.email %> | 
		<%= link_to "Logout", destroy_user_session_path %></p>
	<% end %>
	</div>
	<div id="intro">
		<img src="/images/smooch_logo2.png" alt="smoochbot logo" />
		<p class="tagline">machine assisted romance</p>
	</div>
<div id="notice"><%= flash[:notice] %></div>
<div id="errors"><%= flash[:errors] %></div>
<%= yield %>

</div>

<%= render :partial => '/layouts/footer' %>

</body>
</html>